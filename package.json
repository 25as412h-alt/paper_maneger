{
    "name": "paper-manager",
    "version": "1.0.0",
    "description": "論文管理・検索デスクトップアプリケーション",
    "main": "main.js",
    "scripts": {
      "start": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
      "dev": "webpack serve --mode development --config webpack.config.js",
      "build": "webpack --mode production",
      "electron": "electron .",
      "package": "electron-builder",
      "test": "echo \"Error: no test specified\" && exit 1"
    },
    "keywords": [
      "paper",
      "research",
      "database",
      "search",
      "electron"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
      "electron": "^28.0.0",
      "react": "^18.2.0",
      "react-dom": "^18.2.0",
      "react-router-dom": "^6.20.0",
      "react-hot-toast": "^2.4.1",
      "sqlite3": "^5.1.6"
    },
    "devDependencies": {
      "@babel/core": "^7.23.5",
      "@babel/preset-env": "^7.23.5",
      "@babel/preset-react": "^7.23.3",
      "babel-loader": "^9.1.3",
      "webpack": "^5.89.0",
      "webpack-cli": "^5.1.4",
      "webpack-dev-server": "^4.15.1",
      "html-webpack-plugin": "^5.6.0",
      "tailwindcss": "^3.3.5",
      "autoprefixer": "^10.4.16",
      "postcss": "^8.4.32",
      "postcss-loader": "^7.3.3",
      "css-loader": "^6.8.1",
      "style-loader": "^3.3.3",
      "electron-builder": "^24.9.1",
      "concurrently": "^8.2.2",
      "wait-on": "^7.2.0"
    },
    "build": {
      "appId": "com.papermanager.app",
      "productName": "Paper Manager",
      "directories": {
        "output": "release"
      },
      "files": [
        "main.js",
        "preload.js",
        "database/**/*",
        "dist/**/*",
        "data/**/*"
      ],
      "win": {
        "target": "nsis",
        "icon": "build/icon.ico"
      }
    }
  }