{
  "name": "paper-manager",
  "version": "1.0.0",
  "description": "Research paper management tool with full-text search",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "launch": "node start.js",
    "dev": "webpack serve --mode development",
    "build:app": "webpack --mode production",
    "build": "npm run build:app && electron-builder",
    "setup": "node scripts/setup.js",
    "init-db": "node database/init.js",
    "sample-data": "node scripts/sample-data.js",
    "db:stats": "node scripts/db-utils.js stats",
    "db:reset": "node scripts/db-utils.js reset",
    "db:backups": "node scripts/db-utils.js backups"
  },
  "bin": {
    "paper-manager": "./start.js"
  },
  "keywords": [
    "research",
    "papers",
    "pdf",
    "notes",
    "search"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "better-sqlite3": "^9.2.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.4.1",
    "react-router-dom": "^6.20.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.5",
    "@babel/preset-react": "^7.23.3",
    "autoprefixer": "^10.4.16",
    "babel-loader": "^9.1.3",
    "css-loader": "^6.8.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-rebuild": "^3.2.9",
    "html-webpack-plugin": "^5.6.0",
    "postcss": "^8.4.32",
    "postcss-loader": "^7.3.3",
    "style-loader": "^3.3.3",
    "tailwindcss": "^3.3.5",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "build": {
    "appId": "com.papermanager.app",
    "productName": "Paper Manager",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "database/**/*",
      "data/**/*",
      "public/**/*",
      "build/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/icon.png"
    }
  }
}
