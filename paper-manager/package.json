{
  "name": "paper-manager",
  "version": "3.0.0",
  "description": "論文データベース管理アプリケーション - 全文横断検索とメモ関連付け",
  "main": "electron/main.js",
  "scripts": {
    "start": "concurrently \"npm run start:react\" \"npm run start:electron\"",
    "start:react": "webpack serve --mode development --config config/webpack.config.js",
    "start:electron": "wait-on http://localhost:3000 && electron .",
    "build": "webpack --mode production --config config/webpack.config.js",
    "build:electron": "electron-builder",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/ electron/ backend/"
  },
  "keywords": [
    "research",
    "papers",
    "pdf",
    "notes",
    "search"
  ],
  "author": "Paper Manager Team",
  "license": "MIT",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0",
    "better-sqlite3": "^9.2.2",
    "electron-store": "^8.1.0",
    "markdown-it": "^14.0.0",
    "date-fns": "^3.0.0",
    "jschardet": "^3.1.1",
    "iconv-lite": "^0.6.3"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "html-webpack-plugin": "^5.6.0",
    "babel-loader": "^9.1.3",
    "@babel/core": "^7.23.6",
    "@babel/preset-env": "^7.23.6",
    "@babel/preset-react": "^7.23.3",
    "css-loader": "^6.8.1",
    "style-loader": "^3.3.3",
    "postcss-loader": "^7.3.4",
    "tailwindcss": "^3.4.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0",
    "jest": "^29.7.0",
    "@testing-library/react": "^14.1.2",
    "@testing-library/jest-dom": "^6.1.5",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2"
  },
  "build": {
    "appId": "com.papermanager.app",
    "productName": "Paper Manager",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "backend/**/*",
      "build/**/*",
      "python/**/*",
      "data/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/electron-icon.ico"
    }
  }
}